            <ins class="adsbygoogle"
                 style="display:block"
                 data-ad-client="ca-pub-1941367294435664"
                 data-ad-slot="2234709637"
                 data-ad-format="auto"></ins>
            <script>
            (adsbygoogle = window.adsbygoogle || []).push({});
